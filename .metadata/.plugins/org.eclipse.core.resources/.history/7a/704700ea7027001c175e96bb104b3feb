package model;

public class Nota {
	
	public boolean completata = false;
	public String descrizione; //String è un reference type
	
	/**
	 * costruttore dell'oggeto del tipo nota
	 * @param desc desc inserire descrizione della nota
	 */
	public Nota(String desc) {
		descrizione = desc;
		completata = false;
		System.out.println("Creata una nuova nota");
	}
	public void completa () { //void poichè non ritorna niente visivamente
		completata = true;
	}
	
	public String stampa() { //dato che non è void DEVE ritornare qualcosa dello stesso tipo dichiarato
		String nota = "";
		if (completata==true) {
			nota = "[*] ";
		} else {
			nota = nota + "[ ] ";
		}
		
		return nota + descrizione;
	}

}
