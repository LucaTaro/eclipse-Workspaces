package model;

public class ContoCorrente {
	
	private static int numeratoreConti = 1;//variabile globale e non è una proprietà dell'oggeto quindi non fa parte degli oggetti ma fa parte della classe
	private double saldo; //poichè non deve essere accessibile da tutti
	private int numeroConto;
	private String nomeCliente;
	
	public ContoCorrente(String nome) {
		saldo = 0.0;
		numeroConto = numeratoreConti++;
		nomeCliente = nome;
	}
	
	public void versamento (double euro) {
		saldo += euro;
		
	}
	
	public void prelievo (double euro) {
		if (saldo > euro) 
			saldo -= euro;
		
	}
	
	public double dammiSaldo () {
		return saldo;
	}
	
	public int dammiNumero() {
		return numeroConto;
	}
}
