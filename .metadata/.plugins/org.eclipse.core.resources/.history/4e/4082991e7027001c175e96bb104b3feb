package controller;

import model.Nota;

public class NoteCtrl {
	
	Nota[] notes;
	
	public NoteCtrl(int numNote) {
		notes = new Nota[numNote];
	}
	
	public void addNota (String desc, int posizione) {
		Nota n = new Nota(desc);
		notes[posizione] = n;
		System.out.println("Nota aggiunta con sucesso");
	}
	
	public void stampalista() {
		for (int i = 0; i < lista.length; i++) {
			if (lista[i] != null) {
				System.out.println(lista[i].stampa());
			}
	}

}
